@model IEnumerable<agencja.Models.Klub>

@{
    ViewBag.Title = "Index";
}

<h2>KLUBY</h2>

<p>
    @Html.ActionLink("Utwórz nowy", "Create")
    @Html.ActionLink("Sortuj po ID", "Index")
    @Html.ActionLink("Sortuj po nazwie", "OrderByNazwa")
    @Html.ActionLink("Sortuj po miescie", "OrderByMiasto")
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Nazwa)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Miasto)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Ilosc_miejsc)
        </th>
        <th></th>
    </tr>


    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Nazwa)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Miasto)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Ilosc_miejsc)
            </td>
            <td>
                @Html.ActionLink("Edit", "Edit", new { id = item.ID }) |
                @Html.ActionLink("Details", "Details", new { id = item.ID }) |
                @Html.ActionLink("Delete", "Delete", new { id = item.ID })
            </td>
        </tr>
    }

</table>
